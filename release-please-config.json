{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "separate-pull-requests": true,
  "include-v-in-tag": true,
  "packages": {
    "crates/crate-one": {
      "release-type": "rust",
      "component": "rust-crate-one"
    },
    "crates/crate-two": {
      "release-type": "rust",
      "component": "rust-crate-two"
    },
    "packages/pkg-one": {
      "release-type": "node",
      "component": "node-pkg-one"
    },
    "packages/pkg-two": {
      "release-type": "node",
      "component": "node-pkg-two"
    }
  },
  "plugins": [
    "sentence-case",
    {
      "type": "linked-versions",
      "groupName": "node",
      "components": [
        "node-pkg-one",
        "node-pkg-two"
      ]
    },
    {
      "type": "linked-versions",
      "groupName": "rust",
      "components": [
        "rust-crate-one",
        "rust-crate-two"
      ]
    }
  ]
}
